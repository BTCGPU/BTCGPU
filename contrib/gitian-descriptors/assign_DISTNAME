# A helper script to be sourced into the gitian descriptors

if RECENT_TAG="$(git describe --exact-match HEAD)"; then
    VERSION="${RECENT_TAG#v}"
else
    VERSION="$(git rev-parse --short=12 HEAD)"
fi
DISTNAME="bitcoin-gold-${VERSION}"
