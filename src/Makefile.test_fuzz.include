    test/fuzz/fuzz.h \
    test/fuzz/FuzzedDataProvider.h \
    test/fuzz/util.h

libtest_fuzz_a_CPPFLAGS = $(AM_CPPFLAGS) $(BITCOIN_INCLUDES) $(MINIUPNPC_CPPFLAGS) $(EVENT_CFLAGS) $(EVENT_PTHREADS_CFLAGS)
